#include <iostream>

using namespace std;

int main()
{
    setlocale(LC_ALL, "RUS");
    double a, b, c;
    cout << "Вводи длинны сторон треугольника/n";
    cin >> a;
    cin >> b;
    cin >> c;
    if (a < b + c && b < a + c && c < a + b)
        cout << "С такими длинами составить треугольник - Можно\n";
    else
        cout << "С такими длинами составить треугольник - Нельзя\n";

    system("pause");
}
